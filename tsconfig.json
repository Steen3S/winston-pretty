{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "lib": ["es2022"],
    "module": "CommonJS",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
